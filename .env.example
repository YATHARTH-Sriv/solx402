# Pinspire - Solana x402 Art Gallery
# Copy this file to .env.local and fill in your values

# ===================
# Supabase Configuration
# ===================
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key

# ===================
# Vercel Blob Storage
# ===================
BLOB_READ_WRITE_TOKEN=your_vercel_blob_token

# ===================
# X402 / Solana Configuration
# ===================

# Your Solana wallet address that will receive payments
# This is where all payments will be sent
NEXT_PUBLIC_RECEIVER_ADDRESS=YourSolanaWalletAddressHere

# Solana network to use
# Options: solana-devnet, solana-mainnet-beta
# Use devnet for testing, mainnet-beta for production
NEXT_PUBLIC_NETWORK=solana-devnet

# Facilitator URL - the service that verifies payments
NEXT_PUBLIC_FACILITATOR_URL=https://x402.org/facilitator

# Coinbase Developer Platform Client Key
# Get this from: https://portal.cdp.coinbase.com/
# This enables the x402 payment flow
NEXT_PUBLIC_CDP_CLIENT_KEY=your_cdp_client_key

# ===================
# Treasury Wallet (for claim earnings)
# ===================
# Private key of the wallet that holds collected payments
# Used to transfer earnings to artists
# Can be base58 encoded or JSON array format
RESOURCE_WALLET_PRIVATE_KEY=your_treasury_wallet_private_key
